/* components/modal/modal.wxss */

.page {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  position: fixed;
  bottom: 0;
  z-index: 999;
}

.content-box {
  position: absolute;
  top: 40%;
  max-height: 800rpx;
  background: #fff;
  border-radius: 10px;
  overflow-y: scroll;
}

.close-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.bottom-btns {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 87rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  border-top: 1rpx solid #B5B5B8;
}

.cancel {
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 87rpx;
  color: #B5B5B8;
  border-right: 1rpx solid #B5B5B8;
}

.confirm {
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 87rpx;
  color: #007AFF;
}

.share-button {
  height: 87rpx;
  line-height: 87rpx;
  background-color: rgba(0, 0, 0, 0);
  padding: 0;
  margin: 0;
  border: none;
  color: #007AFF;
}

.share-button::after {
  border: none;
}