/* components/popup/popup.wxss */
.page {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  position: fixed;
  bottom: 0;
  z-index: 999;
}

.content-box {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 10rpx 10rpx 0 0;
}

.close-btn {
  position: absolute;
  top: 19rpx;
  right: 19rpx;
  width: 42rpx;
  height: 42rpx;
}
